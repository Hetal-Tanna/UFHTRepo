   function popupRemotesiteSettingPage(){ 
       var win = window.open('apex/CreateRemoteSiteSetting','myWindow','height=300,width=400,status=0,toolbar=0');
        //win.close();
        var timer = setInterval(function() {   
		    if(win.open) {  
		        clearInterval(timer);  
		        win.close();
		         window.location.reload();
		    }  
		}, 1000);
      //  return false;
   }
